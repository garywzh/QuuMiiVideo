<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.BlackStatusBar" parent="AppTheme"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="Item.TimeLength" parent="TextAppearance.AppCompat.Caption">
        <item name="android:background">@drawable/count_background</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Comment.Content" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#777</item>
    </style>

    <style name="Comment.Time" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#aaa</item>
    </style>

</resources>
