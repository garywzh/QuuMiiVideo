<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.BlackStatusBar" parent="AppTheme" />

    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="Item.TimeLength" parent="TextAppearance.AppCompat.Caption">
        <item name="android:background">@drawable/count_background</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="NoComments" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#666</item>
    </style>

    <style name="Comment.Content" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#666</item>
    </style>

    <style name="Comment.Time" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#aaa</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DemoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">#aa000000</item>
        <item name="android:minWidth">40dp</item>
    </style>
</resources>
