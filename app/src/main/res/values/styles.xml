<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar.BlackStatusBar" parent="AppTheme.NoActionBar"/>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Item.TimeLength" parent="TextAppearance.AppCompat.Caption">
        <!--<item name="android:textSize">13sp</item>-->
        <item name="android:background">@drawable/count_background</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="AppTheme.Item.Time" parent="TextAppearance.AppCompat.Caption">
        <!--<item name="android:textSize">13sp</item>-->
        <item name="android:textColor">#888</item>
    </style>
    <style name="AppTheme.Item.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
    </style>


    <style name="AppTheme.VideoTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="AppTheme.Comment.Name" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#AAA</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AppTheme.Comment.Content" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.Comment.Time" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#AAA</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
