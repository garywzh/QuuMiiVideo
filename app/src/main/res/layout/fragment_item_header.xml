<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/headerBackground"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:id="@+id/tv_title"
            tools:text="俄里海舰队打击叙利亚境内目标" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Caption"
            tools:text="1小时前"
            android:id="@+id/tv_time"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/tv_time"
            android:layout_toRightOf="@id/tv_time"
            android:layout_marginLeft="16dp">

            <ImageView
                android:id="@+id/reply_img"
                android:layout_width="@dimen/item_little_icon"
                android:layout_height="@dimen/item_little_icon"
                android:src="@drawable/ic_question_answer_black_24dp" />

            <TextView
                android:id="@+id/tv_replycount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                style="@style/TextAppearance.AppCompat.Caption"
                tools:text="25" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingRight="16dp"
        android:id="@+id/thumbup_view">

        <ImageView
            android:id="@+id/thumbup_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_thumb_up_black_24dp" />

        <TextView
            android:id="@+id/tv_thumbupcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            tools:text="14" />
    </LinearLayout>
</LinearLayout>
