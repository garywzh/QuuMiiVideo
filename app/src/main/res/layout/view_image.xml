<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/cover_img"
        android:layout_width="176dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/coverpic_default"
        android:contentDescription="@string/desc_coverpic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Body2"
        tools:text="美国人初次试吃榴莲"
        android:id="@+id/tv_title"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_alignTop="@id/cover_img"
        android:layout_toEndOf="@id/cover_img"
        android:layout_toRightOf="@id/cover_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cover_img"
        android:layout_alignStart="@id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Caption"
            tools:text="1小时前"
            android:id="@+id/tv_time" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_photo_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cover_img"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/thumbup_img"
            android:layout_width="@dimen/item_little_icon"
            android:layout_height="@dimen/item_little_icon"
            android:src="@drawable/ic_thumb_up_black_24dp" />

        <TextView
            android:id="@+id/tv_thumbupcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            tools:text="12" />

        <ImageView
            android:id="@+id/reply_img"
            android:layout_width="@dimen/item_little_icon"
            android:layout_height="@dimen/item_little_icon"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_question_answer_black_24dp" />

        <TextView
            android:id="@+id/tv_replycount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            style="@style/TextAppearance.AppCompat.Caption"
            tools:text="25" />
    </LinearLayout>

</RelativeLayout>